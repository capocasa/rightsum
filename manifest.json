{
  "manifest_version": 3,
  "name": "Summarize with Gemini",
  "version": "1.0",
  "description": "Right-click a link to summarize it with Google Gemini",
  "permissions": ["contextMenus", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["link-capture.js"],
      "run_at": "document_idle"
    }
  ]
}
